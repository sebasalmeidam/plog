<%= form_with(model: [:admin, activity]) do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-6">
      <div class="field my-3">
        <%= form.label :category %>
        <%= form.select :category_id, Category.all.collect { |a| [a.name, a.id] }, {include_blank: true}, {class: 'browser-default custom-select'} %>
      </div>

      <div class="field my-3">
        <%= form.label :name %> <br>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="field my-3">
        <%= form.label :description %> <br>
        <%= form.text_area :description, class: 'form-control', placeholder: 'User / to separate lines' %>
      </div>

      <div class="actions pl-0">
        <%= form.submit 'Save', class: 'btn btn-md btn-rounded btn-default ml-0' %>
      </div>
    </div>
  </div>

<% end %>
